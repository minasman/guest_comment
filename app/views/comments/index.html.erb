<% @comments.each do |comment| %>
    <h2>Case: <%= link_to comment.case_number, comment_path(comment) %></h2><br>
    <p>Restaurant #: <%= link_to comment.store.store_number, store_path(comment.store) %> Date: <%= comment.visit_date.strftime("%m/%d/%Y") %> Time: <%= comment.visit_time.strftime("%I:%M%p") %></p>
<% end %>